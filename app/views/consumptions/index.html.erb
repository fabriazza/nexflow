<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold text-gray-900">Your Consumptions</h1>
      <div class="flex items-center gap-4">
        <span class="text-gray-600">Welcome, <%= current_user.full_name %></span>
        <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-sm text-gray-600 hover:text-gray-900" %>
      </div>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold text-gray-800">Filter Consumptions</h2>
        <%= link_to "Add New Consumption", new_consumption_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>
      
      <!-- Filters -->
      <%= form_with url: root_path, method: :get, class: "space-y-4" do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
          <div>
            <%= f.label :utility_type_id, "Utility Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :utility_type_id, 
                options_from_collection_for_select(@utility_types, :id, :name, params[:utility_type_id]),
                { prompt: "All Types" },
                class: "block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= f.label :start_date, "From Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :start_date, value: params[:start_date], class: "block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= f.label :end_date, "To Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :end_date, value: params[:end_date], class: "block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div class="flex gap-2">
            <%= f.submit "Apply", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
            <%= link_to "Clear", root_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="px-6 py-4">
      <% if @consumptions.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Utility Type
                </th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Value
                </th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Date
                </th>
                <th class="px-6 py-3 bg-gray-50 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @consumptions.each do |consumption| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= consumption.utility_type.name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= consumption.value %> <%= consumption.unit %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= consumption.reading_date&.strftime('%B %d, %Y') || consumption.created_at.strftime('%B %d, %Y') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to "View", consumption_path(consumption), class: "text-indigo-600 hover:text-indigo-900 mr-4" %>
                    <%= link_to "Edit", edit_consumption_path(consumption), class: "text-blue-600 hover:text-blue-900 mr-4" %>
                    <%= link_to "Delete", consumption_path(consumption), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg mb-4">You haven't logged any consumptions yet.</p>
          <%= link_to "Add Your First Consumption", new_consumption_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
